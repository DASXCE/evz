<html t:type="layout" title="evz Index"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<!-- Most of the page content, including <head>, <body>, etc. tags, comes 
		from Layout.tml -->
	<div id="contentHeader">
		<h1>Sistem za Evidenciju Å½ivotinja</h1>
	</div> <!-- #contentHeader -->

	<div class="container">


		<div class="grid-17">

			<div class="widget widget-plain">
<t:zone t:id="statZone" id="statZone">
				<div class="widget-content">

					<h2 class="dashboard_title">
						Statistika
						<span>${danas}</span>
						<t:actionlink t:id="refresh" zone="statZone">
						<button class="btn btn-orange" style="float:right;">
						<span class="icon-loop" style="color:white; font-style:normal;">Refresh</span>
						</button>
						</t:actionlink>
					</h2>

					<div class="dashboard_report first activeState">
						<div class="pad">
							<span class="value">${brKorisnikaUSistemu}</span>
							Korisnika
						</div> <!-- .pad -->
					</div>

					<div class="dashboard_report defaultState">
						<div class="pad">
							<span class="value">${brGazdinstavaUSistemu}</span>
							Gazdinstava
						</div> <!-- .pad -->
					</div>

					<div class="dashboard_report defaultState">
						<div class="pad">
							<span class="value">${brVeterinaraUSistemu}</span>
							Veterinara
						</div> <!-- .pad -->
					</div>

					<div class="dashboard_report defaultState last">
						<div class="pad">
							<span class="value">${brZivotinjaUSistemu}</span>
							Zivotinja
						</div> <!-- .pad -->
					</div>

				</div> <!-- .widget-content -->
</t:zone>
			</div> <!-- .widget, HIDDEN! -->
			<div class="widget widget-table">

				<div class="widget-header">
					<span class="icon-list"></span>
					<h3 class="icon aperture">Vlasnici</h3>
				</div> <!-- .widget-header -->

				<div class="widget-content">
					<table class="table table-bordered table-striped data-table">
						<thead>
							<tr>
								<th>Opcije</th>
								<th>JMBG</th>
								<th>Ime</th>
								<th>Prezime</th>
								<th>Gazdinstvo</th>
							</tr>
						</thead>
						<tbody>
							<t:loop source="vlasnicii" value="vlasnikTmp">
								<tr class="gradeA">
									<td>
										<ul id="invoice_actions" style="margin:0; list-style-type:none;">
										<t:if test="isAdmin()">
											<li id="liDelete${vlasnikTmp.getJmbg()}" class="delete" style="margin:0; display:inline;"
												original-title="Delete">
												<a t:type="actionlink" t:id="deleteVlasnik" context="vlasnikTmp"></a>
											</li>
											
											<li id="liEdit${vlasnikTmp.getJmbg()}" class="edit" style="margin:0; display:inline;"
												original-title="Edit">
												<a t:type="actionlink" t:id="editVlasnik" context="vlasnikTmp"></a>
											</li>
											</t:if>
										</ul>
									</td>
									<td>${vlasnikTmp.getJmbg()}</td>
									<td>${vlasnikTmp.getIme()}</td>
									<td>${vlasnikTmp.getPrezime()}</td>
									<t:if test="${akoNijeNull(vlasnikTmp.getGazdinstvo())}">
										<td>${vlasnikTmp.getGazdinstvo().getNaziv()}</td>
										<p:else>
											<td>N/A</td>
										</p:else>
									</t:if>
					
								</tr>
								<script>
						$(function () {
						$('#liEdit${vlasnikTmp.getJmbg()}').tipsy({gravity: 'se'});
						$('#liDelete${vlasnikTmp.getJmbg()}').tipsy({gravity: 'se'});
						});
					</script>
							</t:loop>

						</tbody>
						
					</table>


				</div> <!-- .widget-content -->

			</div> <!-- .widget -->

		</div> <!-- .grid -->

		<div class="grid-7">

			
			<t:if test="isAdmin()">
				<div class="box plain">

					<a t:type="pagelink" t:page="admin/add/user" href="admin/add/user"
						class="btn btn-primary btn-large dashboard_add">+ Korisnik</a>
					<a href="admin/add/gazdinstvo" class="btn btn-teal btn-large dashboard_add">+ Gazdinstvo</a>

				</div>
			</t:if>


			

			<div class="box">
				<h3>Recent Activity</h3>
				<ul class="bullet secondary">
					<li>Lorem ipsum dolor sit amet</li>
					<li>Quisque ornare ultricies lectus, quis aliquet lorem
						malesuada
						ac.</li>
					<li>Vivamus hendrerit malesuada elit</li>
					<li>Maecenas venenatis ante ut mi</li>
				</ul>

				<ul class="bullet primary">
					<li>Maecenas venenatis ante ut mi</li>
					<li>Praesent ac elit neque, sed faucibus eros.</li>
					<li>Vivamus hendrerit malesuada elit</li>
				</ul>
			</div> <!-- .box -->

		</div> <!-- .grid -->

	</div> <!-- .container -->

</html>
